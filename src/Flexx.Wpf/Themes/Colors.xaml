<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ForegroundBrushLight">#DDDDDD</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundBrush">#516C6E</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundBrushDark">#3E5D5E</SolidColorBrush>

    <SolidColorBrush x:Key="PrimaryBrush">#2D4C4D</SolidColorBrush>

    <SolidColorBrush x:Key="BackgroundBrush">#282E33</SolidColorBrush>
    <SolidColorBrush x:Key="BackgroundBrushSemiLight">#3D444B</SolidColorBrush>
    <SolidColorBrush x:Key="BackgroundBrushLight">#4C535B</SolidColorBrush>

    <Style TargetType="{x:Type Label}" x:Key="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrushLight}"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Key="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrushLight}"/>
    </Style>
</ResourceDictionary>